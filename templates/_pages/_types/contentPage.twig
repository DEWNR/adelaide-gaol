{% block _inline_css %}
    <style>
        {{ source('index_critical.min.css', ignore_missing = true) }}
    </style>
{% endblock %}

{% block content %}

    <section class="c-general-page">

        <div class="o-wrapper">


            <div class="c-page">

                <h1 class="c-page__title">{{ entry.title }}</h1>


                <div class="o-layout">
                    <div class="c-content">


                        <nav class="c-nav-side    o-layout__item  u-4/12@md u-3/12@lg">


                            {% set topLevel = (entry.level == 1) ? entry : entry.getAncestors().level(1).first()  %}

                            {# don't show the tree if nothing's under it #}
                            {% if topLevel.hasDescendants %}

                                {# <h2>{{topLevel}}</h2> #}
                                <ul class="c-nav-side__list   c-nav-side__list--lvl-0  o-list-bare">
                                {% set subnav =  topLevel.getDescendants()  %}

                                {% nav page in subnav  %}
                                    {% if page.id != entry.id %}
                                        <li>{{ page.getLink() }}</li>
                                    {%else%}
                                        <li class="current-page">{{page}}</li>
                                    {%endif%}

                                    {% ifchildren %}
                                        <ul class="sub-nav">
                                                {% children %}
                                            </ul>
                                    {% endifchildren %}

                                {% endnav %}
                                </ul>

                            {% endif %}


                        </nav>


                        <div class="o-layout__item  u-8/12@md u-9/12@lg">
                            {% if entry.introText | length %}
                                <p class="c-content__intro">{{ entry.introText }}</p>
                            {% endif %}



                            <div>
                                {{ entry.bodyContent }}
                            </div>
                        </div>

                    </div>






                </div>

            </div>


        </div>


    </section>

{% endblock %}

{% block _inline_js %}{% endblock %}
